{% extends 'base.html.twig' %}


{% block body %}

    <div class="contain">
        <link rel="stylesheet" href="{{ asset('styles/app.css') }}">

        <div class="flex justify-center mt-10">
            <div class="w-full max-w-xl bg-white rounded-xl shadow-lg p-6">
                <h2 class="text-2xl font-bold mb-6 text-center text-gray-800">Cr√©er un post</h2>

                {{ form_start(form) }}
                {{ form_errors(form) }}

                <div class="mb-4">
                    {{ form_label(form.title, null, {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                    {{ form_widget(form.title, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
                    {{ form_errors(form.title) }}
                </div>

                <div class="mb-4">
                    {{ form_label(form.content, null, {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                    {{ form_widget(form.content, {'attr': {'class': 'w-full px-4 py-2 border rounded-lg h-32 resize-none focus:outline-none focus:ring-2 focus:ring-blue-400'}}) }}
                    {{ form_errors(form.content) }}
                </div>

                <div class="flex justify-between items-center mt-6">
                    <button type="submit" class="bg-blue-500 text-success px-6 py-2 rounded hover:bg-blue-600 transition">Poster</button>
                    <a href="{{ path('app_post') }}" class="text-blue-500 hover:underline">Retour</a>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

        {% endblock %}



